{
  "build": {
    "beforeDevCommand": "npm run dev --prefix frontend",
    "beforeBuildCommand": "npm run build --prefix frontend",
    "devPath": "http://localhost:5173",
    "distDir": "../frontend/build"
  },
  "package": {
    "productName": "PGN to EPD",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$RESOURCE/*"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "PGN to EPD Converter",
        "width": 800,
        "height": 600
      }
    ],
    "systemTray": null,
    "sidecar": {
      "allowed-scripts": ["run-backend"],
      "scripts": {
        "run-backend": {
          "command": "python",
          "args": ["-m", "uvicorn", "server:app", "--host", "127.0.0.1", "--port", "8000"],
          "cwd": "../backend"
        }
      }
    }
  }
}
